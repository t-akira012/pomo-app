{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "window-always-top-app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "maximize": true,
        "minimize": true,
        "hide": true,
        "startDragging": true,
        "show": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "windows": [
      {
        "title": "pomo-app",
        "width": 160,
        "height": 80,
        "transparent": true,
        "resizable": true,
        "alwaysOnTop": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.window-always-top-app.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
